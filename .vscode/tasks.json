{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "db link debug-build",
      "type": "shell",
      "command": "[ -a main.db ] || ln ../Illue-Wiz/main.db ./main.db",
      "options": {
        "cwd": "${workspaceFolder}/../debug-build/"
      },
      "problemMatcher": []
    },
    {
      "label": "qmake debug-build",
      "type": "shell",
      "command": "${userHome}/Qt/6.6.1/gcc_64/bin/qmake ../Illue-Wiz/illue-wiz.pro",
      "options": {
        "cwd": "${workspaceFolder}/../debug-build/"
      },
      "problemMatcher": [],
      "dependsOn": "db link debug-build"
    },
    {
      "label": "debug-build",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/../debug-build/"
      },
      "problemMatcher": [],
      "dependsOn": "qmake debug-build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "cppbuild",
      "label": "Build wip-ideas",
      "command": "/usr/bin/g++-13",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-Wall",
        "-std=c++17",
        "${workspaceFolder}/wip-ideas/*.cpp",
        "-o",
        "${workspaceFolder}/wip-ideas/debug/main"
      ],
      "options": {
        "cwd": "${workspaceFolder}/wip-ideas"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
      },
      "detail": "Task generated by Debugger."
    }
  ]
}
